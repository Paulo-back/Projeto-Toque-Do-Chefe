<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Receita">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="446dp"
            android:layout_height="851dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.933"
            app:srcCompat="@drawable/fundo" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="109dp"
            android:layout_height="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024"
            app:srcCompat="@drawable/logo" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="49dp"
            android:layout_height="47dp"
            android:background="#00FFFFFF"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.955"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.035"
            app:srcCompat="@drawable/group__1_" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="426dp"
            android:layout_height="70dp"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/rectangle_9"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="796dp" />

        <ImageButton
            android:id="@+id/perfilMenu3"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginTop="779dp"
            android:layout_marginBottom="1dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.881"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/group_427319120" />

        <ImageButton
            android:id="@+id/homeMenu3"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginTop="779dp"
            android:layout_marginBottom="1dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/group_427319122__1_" />

        <ImageButton
            android:id="@+id/categoriaMenu3"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginTop="779dp"
            android:layout_marginBottom="1dp"
            android:background="#00FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/group_427319121__1_" />


        <TextView
            android:id="@+id/userName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="117dp"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Usuario"
            android:textColor="#0E3A5C"
            app:layout_constraintBottom_toTopOf="@+id/ratingBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.793"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="167dp"
            android:layout_height="61dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:text="Macarr達o Indiano"
            android:textAlignment="center"
            android:textColor="#0E3A5B"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userName2" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="230dp"
            android:layout_height="44dp"
            android:layout_marginTop="8dp"
            android:progressTint="#FFB68D"
            android:rating="4"
            android:scaleX="0.3"
            android:scaleY="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />


        <TextView
            android:id="@+id/textView14"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="um macarr達o extremamente delicioso!!!..."
            android:textAlignment="center"
            android:textColor="#0E3A5A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ratingBar" />


        <TextView
            android:id="@+id/textView16"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="352dp"
            android:text="receita"
            android:textAlignment="center"
            android:textColor="#0E3A5A"
            app:layout_constraintBottom_toTopOf="@+id/imageView13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/recipeBoxes"
            android:layout_width="412dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16">

            <TextView
                android:id="@+id/txtIngredientes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_background"
                android:maxHeight="200dp"
                android:overScrollMode="ifContentScrolls"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:text="Ingredientes:\n- 200g de macarr達o\n- 1 colher de curry\n- Sal a gosto"
                android:textColor="#0E3A5A"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtModoPreparo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_background"
                android:maxHeight="200dp"
                android:overScrollMode="ifContentScrolls"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:text="Modo de preparo:\n1. Cozinhe o macarr達o\n2. Adicione o curry\n3. Sirva quente"
                android:textColor="#0E3A5A"
                android:textSize="14sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="209dp"
            android:layout_height="108dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:srcCompat="@drawable/unsplash_ry5pwzgazj8" />


        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="14dp"
            app:layout_constraintBottom_toTopOf="@+id/textView16"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/frame_31" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
